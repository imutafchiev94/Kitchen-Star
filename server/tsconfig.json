{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "typeRoots": ["node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}